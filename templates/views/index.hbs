{{!< default}}

{{> "toolbar"}}

{{!-- Hero
			Loads a specific blob of content.
--}}
<div class="jumbotron jumbotron-fluid background-gradient-blue mb-0">
	<div class="container">
		<div class="row justify-content-md-center">
			<div class="col col-lg-12" >
				<h4 class="display-3 text-white">It's a whole new Toad World!</h4>
				<p class="lead text-white">
					We’re not sure if you noticed, we’ve got some snazzy new digs here.
					But don’t worry, you can still download our products and find
					helpful content.
				</p>
				<hr class="my-4">
				<p class="lead">
					<a class="btn btn-dark btn-lg" href="/downloads" role="button">Download Products</a>
				</p>
			</div>
		</div>
	</div>
</div>

{{!-- Homepage Specific blob's --}}
{{#each data.products}}
<div class="jumbotron jumbotron-fluid mb-0 {{#moduloIf @index 2 0}}background-white{{else}}background-cyan{{/moduloIf}}">
	<div class="container">
		<div class="row justify-content-md-center">
			{{#moduloIf @index 2 0}}
				<div class="col col-md-6">
					<img class="card-img-leftcard-img-right" src="{{screenshot.image.url}}" width="100%">
				</div>
				<div class="col col-md-6 vertical-center">
					<div class="center-height">
						<h4 class="display-4">{{title}}</h4>
						{{{screenshot.content.html}}}
					</div>
				</div>
			{{else}}
				<div class="col col-md-6 vertical-center">
					<div class="center-height">
						<h4 class="display-4">{{title}}</h4>
						{{{screenshot.content.html}}}
					</div>
				</div>
				<div class="col col-md-6">
					<img class="card-img-leftcard-img-right" src="{{screenshot.image.url}}" width="100%">
				</div>
			{{/moduloIf}}
		</div>
	</div>
</div>
{{/each}}

